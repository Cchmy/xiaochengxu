
.content{
  display: flex;
  height: 40px;
}
.content .left{
  width: 15%;
  height: 100%;
  background: gainsboro;
  border-radius: 5px ;
  text-align: center;
}
.content .left image{
  height: 30px;
  width: 80%;
}
.content .right{
  height: 80%;
  margin-left: 3%;
  background: yellowgreen;
  border-radius: 5px;
  line-height: 100%;
  margin-top: 7px;
  box-sizing: border-box;
  padding: 8px;
}